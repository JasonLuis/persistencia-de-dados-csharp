@typeparam T

<MudDialog>
    <DialogContent>
        <MudText>@title</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Não</MudButton>
            <MudButton Color="Color.Error" Variant="Variant.Filled" OnClick="Submit">Sim</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public T Value { get; set; }

    [Parameter]
    public string title { get; set; }
    

    private void Cancel ()
    {
        MudDialog.Cancel();
    }

    private void Submit()
    {
        MudDialog.Close(DialogResult.Ok(Value));
    }
    

}
